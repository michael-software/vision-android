<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <color name="backgroundLight">#FFFFFF</color>
    <color name="actionBarLight">#E50000</color>
    <color name="actionBarDarkLight">#BF0000</color>
    <color name="actionBarTextLight">#FFFFFF</color>
    <color name="tileBackgroundLight">#C8C8C8</color>
    <color name="tileBackgroundLightFocus">#666666</color>
    <color name="headerBackgroundLight">#888888</color>
    <color name="textColorLight">#000000</color>
    <color name="editTextColorLight">#666666</color>

    <style name="AppThemeLight" parent="@style/Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/MyActionBarLight</item>
        <item name="android:checkboxStyle">@style/customCheckBoxStyleLight</item>
        <item name="actionBarStyle">@style/MyActionBarLight</item>

        <item name="colorPrimary">@color/actionBarLight</item>
        <item name="colorPrimaryDark">@color/actionBarDarkLight</item>
        <item name="android:colorPrimary" tools:ignore="NewApi">@color/actionBarLight</item>

        <item name="android:actionMenuTextColor">@color/actionBarTextLight</item>
        <item name="android:windowBackground">@color/backgroundLight</item>

        <item name="android:buttonStyle">@style/ButtonLight</item>
        <item name="android:imageButtonStyle">@style/ButtonLight</item>
        <item name="android:editTextStyle">@style/EditTextLight</item>

        <item name="android:colorPressedHighlight">@color/highlightRed</item>
        <item name="android:colorFocusedHighlight">@color/highlightRed</item>

        <item name="android:textSize">@dimen/activity_text_size</item>

        <item name="android:textCursorDrawable">@null</item>

        <item name="android:textColorHighlight">#99ff0000</item>

        <item name="android:textSelectHandleLeft">@drawable/theme_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/theme_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/theme_text_select_handle</item>

        <item name="android:seekBarStyle">@style/CustomSeekBar</item>

        <item name="android:textViewStyle">@style/TextViewLight</item>

        <item name="android:textColorPrimary">@color/ab_text_color</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="android:windowAllowReturnTransitionOverlap" tools:targetApi="lollipop">true</item>
        <item name="android:windowAllowEnterTransitionOverlap" tools:targetApi="lollipop">true</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/actionBarLight</item>

        <!-- Theme dependent images -->
        <item name="justify_left">@drawable/ic_action_justify_left_black</item>
        <item name="justify_center">@drawable/ic_action_justify_center_black</item>
        <item name="justify_right">@drawable/ic_action_justify_right_black</item>
        <item name="justify_full">@drawable/ic_action_justify_full_black</item>

        <item name="ordered_list">@drawable/ic_action_ordered_list_black</item>
        <item name="unordered_list">@drawable/ic_action_unordered_list_black</item>
    </style>

    <style name="MyActionBarLight" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="titleTextStyle">@style/MyTitleTextStyleLight</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="MyTitleTextStyleLight" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionBarTextLight</item>
    </style>

    <style name="customCheckBoxStyleLight" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/custom_checkbox</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ButtonLight" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@color/tileBackgroundLight</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="DialogLight" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/backgroundLight</item>

        <item name="android:buttonStyle">@style/ButtonLight</item>
        <item name="android:editTextStyle">@style/EditTextLight</item>
        <item name="android:checkboxStyle">@style/customCheckBoxStyleLight</item>
    </style>

    <style name="EditTextLight" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/editTextColorLight</item>
        <item name="android:background">@drawable/edittext_modified_states</item>
    </style>

    <style name="TextViewLight" parent="android:Widget.TextView">
        <item name="android:textColorPrimary">@color/text_color_light</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>
</resources>
